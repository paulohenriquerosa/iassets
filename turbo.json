{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NOTION_TOKEN",
    "NOTION_DATABASE_ID",
    "NODE_ENV",
    "REVALIDATE_SECRET",
    "OPENAI_API_KEY",
    "MAX_ITEMS",
    "RESEND_API_KEY",
    "UNSPLASH_ACCESS_KEY",
    "PEXELS_API_KEY",
    "TIME_WINDOW_HOURS",
    "GOOGLE_API_KEY",
    "GOOGLE_CX_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
